<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01//EN" "http://www.w3.org/TR/html4/strict.dtd">
<html>
<head>
  <link rel="shortcut icon" href="/favicon.ico" type="image/x-icon" />
  <title>Magic Lunch Ball</title>
  <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
  <link rel="stylesheet" type="text/css" href="/lunch.css?2" />
  <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.3.2/jquery.min.js" type="text/javascript"></script>
  <script src="/lunch.js?2" type="text/javascript"></script>
  <meta name="viewport" content="width=320; initial-scale=1.0; maximum-scale=1.0; user-scalable=0;"/>
</head>
<body>

<div id="content">
  <div id="header">
    <h1>
      Magic Lunch Ball
    </h1>
  </div>

  <% column_base      = @restaurant_array.length / 3 %>
  <% restaurant_list1 = @restaurant_array[0...column_base] %>
  <% restaurant_list3 = @restaurant_array[-column_base..-1] %>
  <% restaurant_list2 = @restaurant_array - restaurant_list1 - restaurant_list3 %>
  <% index            = 0 %>

  <div>
    <input type="button" value="Shake" onclick="pickRestaurant(); return false;"/>
    <span id="selection" style="margin-left:10px"></span>
  </div>

  <ul id="column1">
    <% restaurant_list1.each do |restaurant_list| %>
      <% index += 1 %>
      <li id="<%= "restaurant#{index}" %>">
        <span class="name"><%= restaurant_list[0] %></span>
        <span class="priority"><%= restaurant_list[1]['priority'] %></span>
        <span style='display:none' class='priority'><%= "restaurant#{index}..#{restaurant_list[1]['priority']}" %></span>
      </li>
    <% end %>
  </ul>
  
  <ul id="column2">
    <% restaurant_list2.each do |restaurant_list| %>
      <% index += 1 %>
      <li id="<%= "restaurant#{index}" %>">
        <span class="name"><%= restaurant_list[0] %></span>
        <span class="priority"><%= restaurant_list[1]['priority'] %></span>
        <span style='display:none' class='priority'><%= "restaurant#{index}..#{restaurant_list[1]['priority']}" %></span>
      </li>
    <% end %>
  </ul>
  
  <ul id="column3">
    <% restaurant_list3.each do |restaurant_list| %>
      <% index += 1 %>
      <li id="<%= "restaurant#{index}" %>">
        <span class="name"><%= restaurant_list[0] %></span>
        <span class="priority"><%= restaurant_list[1]['priority'] %></span>
        <span style='display:none' class='priority'><%= "restaurant#{index}..#{restaurant_list[1]['priority']}" %></span>
      </li>
    <% end %>
  </ul>
  
</div>


</body>
</html>
